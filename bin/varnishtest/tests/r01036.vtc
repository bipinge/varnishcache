varnishtest "Test case for #1036"

server s1 {
	rxreq
	# Send a bodylen of 1,5MiB, which will exceed cache space of 1MiB
	non_fatal
	txresp -bodylen 1572864
} -start

varnish v1 -arg "-sdefault,1MiB" -arg "-pgzip_level=0" -vcl+backend {
	sub vcl_backend_response {
		set beresp.do_stream = false;
		set beresp.do_gzip = true;
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == "503"
} -run


