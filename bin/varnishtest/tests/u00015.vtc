varnishtest "varnishstat -j"

server s1 -repeat 5 {
	rxreq
	txresp
} -start

varnish v1 -vcl+backend {} -start

client c1 -repeat 5 {
	txreq
	rxresp
} -run

delay 1

shell { varnishstat -n ${v1_name}  -j }
