varnishtest "probe expect close"

server s0 {
	rxreq
	txresp
	expect_close
} -dispatch

varnish v1 -vcl+backend {
	probe default {
		.window = 1;
		.threshold = 1;
		.timeout = 1s;
		.interval = 0.1s;
		.expect_close = true;
	}
} -start

varnish v2 -vcl+backend {
	probe default {
		.window = 1;
		.threshold = 1;
		.timeout = 1s;
		.interval = 0.1s;
		.expect_close = false;
	}
} -start

delay 2

varnish v1 -cliexpect sick backend.list
varnish v2 -cliexpect healthy backend.list
