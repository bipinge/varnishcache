varnishtest "test vmod_std.boolean()"

server s1 {
    rxreq
    txresp
} -start

varnish v1 -vcl+backend {
    import std;

    sub vcl_deliver {
        set resp.http.foo = std.boolean(req.http.foo, false);
    }
} -start

client c1 {
    txreq -hdr "Foo: true"
    rxresp
    expect resp.http.foo == true

    txreq -hdr "Foo: TRUE"
    rxresp
    expect resp.http.foo == true

    txreq -hdr "Foo: false"
    rxresp
    expect resp.http.foo == false

    txreq -hdr "Foo: FALSE"
    rxresp
    expect resp.http.foo == false

    txreq -hdr "Foo: 0"
    rxresp
    expect resp.http.foo == false

    txreq -hdr "Foo: 1"
    rxresp
    expect resp.http.foo == true
} -run
